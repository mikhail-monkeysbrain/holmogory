.call
	.public-head
		background active
		padding 28px 56px
		h2
			div
				float right
	.accordeon
		&-box
			border 0
			.date
				margin -22px 0 22px 0
			&.active
				background transparent
			&--button
				position relative
				justify-content center
			p
				text-align left
			&_content
				margin-top 20px
				background lightblue*0.7
				padding 20px
				border-radius 10px 
				p
					color #fff
					line-height 1.3
				.profit
					width 20%
					background darkblue
					border-radius 10px
					display -webkit-flex
					display -moz-flex
					display -ms-flex
					display -o-flex
					display flex
					flex-wrap wrap
					+media(960px)
						width 50%
						margin 0 auto
					+media(640px)
						width 90%
					p
						width 100%
						padding 10px 10px 0 10px
					a
						width 50%
						padding 10px
						border-top 2px solid blue
						&:hover
							background blue
						&.left
							border-radius 0 0 0 10px
							border-right 1px solid blue
						&.right
							border-radius 0 0 10px 0
							border-left 1px solid blue
					
						