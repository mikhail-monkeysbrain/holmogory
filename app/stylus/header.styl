header
  width 100%
  height 55px
  background blue
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  z-index: 1
  .wrapper
    box-shadow 0 0 0 0 transparent
    margin: 0 auto
.header-top
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	&_menu
		width 231px
		height 55px
		background darkblue
		@media (max-width 480px)
			width 55px
	&_nav
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-grow 1
		justify-content flex-start
		align-items center
		margin-left 1em
		@media (max-width 960px)
			justify-content space-around
		@media (max-width 480px)
			justify-content flex-start
		li
			margin 0 .5em
			@media (max-width 1200px)
				&:nth-last-child(1)
					display none
			@media (max-width 960px)
					display none
					&:nth-child(1)
						display block
			a
				transition animation
				&:hover
					color gray
	&_phone
		min-width 11em
		@media (max-width 960px)
			min-width 12em
		p
			padding-top 5px
			font-family "RobotoLight"
			margin 0
			color #fff
		a
			font-size 20px
			line-height 2
			cursor pointer
			font-weight 600
			font-family: 'RobotoBold'
.menu
  &-header
    display: flex
    height: 55px
    padding-left: 25px
    align-items center
    cursor pointer
    background url(../img/menu-btn.png) //layer with open
    @media (max-width 480px)
      padding-left 15px
      background-position: -17px 0 
    p
      margin-left 25px
      font-family "GothamProMedium"
      font-size 16px
      @media (max-width 480px)
        display none
  ul
    background darkblue
    padding 0 0 15px
    margin-top: -480px
    transition animation
    @media (max-width 480px)
      position absolute
      width 100%
    &.open
      margin: 0
    li
      padding 10px 25px
      min-height 40px
      &:hover
        background: blue
      a
        font-size 12px