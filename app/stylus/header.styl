header
  width 100%
  height 55px
  background blue
  position absolute
  left 0
  top 0
  right 0
  bottom 0
  z-index: 1
  .wrapper
    box-shadow 0 0 0 0 transparent
    margin: 0 auto
.header-top
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	justify-content space-between
	&_menu
		width 231px
		height 55px
		background darkblue
		@media (max-width 480px)
			width 55px
	&_nav
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-grow 1
		justify-content flex-start
		align-items center
		margin-left 1em
		@media (max-width 960px)
			justify-content space-around
		@media (max-width 480px)
			justify-content flex-start
		li
			margin 0 .5em
			@media (max-width 1200px)
				&:nth-last-child(1)
					display none
			@media (max-width 960px)
					display none
					&:nth-child(1)
						display block
			a
				transition animation
				&:hover
					color gray
	&_phone
		min-width 11em
		@media (max-width 960px)
			min-width 12em
		p
			padding-top 5px
			font-family "RobotoLight"
			margin 0
			color #fff
		a
			font-size 20px
			line-height 2
			cursor pointer
			font-weight 600
			font-family: 'RobotoBold'