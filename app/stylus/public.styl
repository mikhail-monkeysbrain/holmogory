.pub
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	+media(960px)
		flex-direction column-reverse
.public
	width calc(100% - 231px)
	position relative
	background #fff
	padding 56px 56px 30px
	font-family 'GothamProMedium'
	min-height 100vh
	&.static
		+media(768px)
			padding 10px
	+media(960px)
		width 100%
	+media(768px)
		padding-bottom 50px
	+media(480px)
		padding 10px 0
	&-head
		width 100%
		height 114px
		background url('../img/bg_header.jpg') no-repeat
		background-size cover
		padding 56px
		position absolute
		top 0
		left 0
		+media(480px)
			padding 10px
			height 60px
	&-fill
		margin-top 85px
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex-direction column
		h2
			+media(768px)
				order -1
		&--date
			@extend .sitebar-item--date //TODO in mixin
		p
			color #000
			font-family 'RobotoRegular'
			margin 10px 0
			text-align center
		&--gallery
			margin 35px -56px
			background url('../img/bg_slider.jpg') no-repeat
			background-size 100%
			padding 40px
			+media(768px)
				order -1
				padding 0
				background transparent
				margin 10px -35px
			.owl-nav.disabled
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				position absolute
				width 70%
				justify-content space-between
				height 0
				margin 3% -6%
			.owl-prev, .owl-next
				size (35px 35px)
				border-radius (50%)
				cursor pointer
			.owl-prev
				@extend .arrow-prew:hover
				//&:hover
					//@extend .owl-prev
					//background-position: 0 36px
			.owl-next
				@extend .arrow-next:hover
				//&:hover
					//@extend .owl-next
					//background-position: 105px 36px
			.owl-item
				&.active
					background transparent
	
	.pagginaton
		@media (max-width 480px)
			display none
	&.full
		width 100%
		.public
			&-more
				&--item
					margin 10px 0 //TODO fix this
.public
	&-more
		margin-top 65px
		@media (max-width 768px)
			margin 0
			h2
				margin 20px 0
		&--item
			border 2px solid more-item
			clear both
			margin 35px 0
			padding 20px
			min-height 205px
			position relative
			transition animation
			.head
				font-weight 600
				display block
			@media (max-width 768px)
				border 0
				padding 0
				margin 0
				min-height 220px
			@media (max-width 480px)
				min-height 150px
			&:hover
				background more-item
				@media (max-width 768px)
					background transparent
			&--img
				float left
				margin-right 35px
				@media (max-width 768px)
					margin-right 5px
				@media (max-width 768px)
					width 50%
			&--date
				font-family "RobotoRegular"
				color blue
				font-size 14px
				font-weight 600
				padding 0 0 10px
				@media (max-width 768px)
					display none
			&_text
				font-size 14px
				font-family "RobotoRegular"
				padding 10px 0
				@media (max-width 768px)
					font-size 0
					.head
						font-size 14px
						@media (max-width 480px)
							font-size 12px					
		.btn_more
			position absolute
			right 20px
			bottom 20px
			@media (max-width: 1200px) 
				position relative
				right 0
				bottom 0
				@media (max-width 768px)
					display non
	&.full
		width 100%
		.public
			&-more
				&--item
					margin 10px 0
.js_select
	margin-top 100px
	h5
		display none
		font-family "RobotoRegular"
		+media(768px)
			display block
			width 100%
			z-index 1
		    position absolute
		    background blue
		    left 0
		    top 114px
		    height 27px
		    color #fff
		    text-align center
		    padding 15px
		    line-height 0
		+media(480px)
			top 60px
			padding 18px
	select
		position absolute
		left 0
		margin-top -10px
		box-shadow 0 -25px 0 10px blue
		text-align center
		cursor pointer
.arrows.no-mobile
	+media(480px)
		display none